<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/gradient_background"
    tools:context=".MyCourseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your current course(s)"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/btn_course1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Havent got text for course yet"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@color/purple_200"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        />


    <Button
        android:id="@+id/btn_course2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@color/purple_200"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btn_course3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@color/purple_200"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btn_course4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@color/purple_200"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

</LinearLayout>